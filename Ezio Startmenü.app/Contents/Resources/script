def main_menu():
    while True:
        clear_screen()
        print_banner()
        print(f"{Fore.CYAN}1. START EZIO TRADINGBOT")
        print(f"2. AVELINE (Manueller Lernmodus)")
        print(f"3. ALOY (Automatischer Lernmodus)")
        print(f"4. SETTINGS")
        print(f"5. EXIT{Style.RESET_ALL}")
        auswahl = input("\nðŸ•¹ï¸  Auswahl (1â€“5): ").strip()

        if auswahl == "1":
            os.system("python3 trading_bot_V4.py")  # ggf. Pfad anpassen
        elif auswahl == "2":
            os.system("python3 trading_bot_V4.py")  # lÃ¤uft bereits CLI-Lerninterface
        elif auswahl == "3":
            os.system("python3 trading_bot_V4.py auto")  # ggf. Autolernflag integrieren
        elif auswahl == "4":
            print("\nâš™ï¸  Einstellungen folgen bald...")
            input("DrÃ¼cke Enter, um zurÃ¼ckzukehren.")
        elif auswahl == "5":
            print("\nðŸ‘‹ Bis bald, Commander!")
            sys.exit(0)
